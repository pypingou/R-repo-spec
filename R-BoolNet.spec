%global packname  BoolNet
%global rlibdir  %{_libdir}/R/library


Name:             R-%{packname}
Version:          1.44
Release:          1%{?dist}
Summary:          Generation, reconstruction, simulation and analysis of synchronous, asynchronous, and probabilistic Boolean networks

Group:            Applications/Engineering 
License:          Artistic-2.0
URL:              http://cran.r-project.org/web/packages/%{packname}/index.html
Source0:          http://cran.r-project.org/src/contrib/%{packname}_%{version}.tar.gz
BuildRoot:        %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)



BuildRequires:    R-devel tex(latex)  

%description
Provides methods to reconstruct and generate synchronous, asynchronous,
and probabilistic Boolean networks, and to analyze and visualize
attractors in Boolean networks

%prep
%setup -q -c -n %{packname}

%build

%install
rm -rf %{buildroot}
mkdir -p %{buildroot}%{rlibdir}
%{_bindir}/R CMD INSTALL -l %{buildroot}%{rlibdir} %{packname}
test -d %{packname}/src && (cd %{packname}/src; rm -f *.o *.so)
rm -f %{buildroot}%{rlibdir}/R.css

%clean
rm -rf %{buildroot}

%files
%defattr(-, root, root, -)
